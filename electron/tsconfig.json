{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "../dist-electron",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "../src-electron/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../dist-electron",
    "../dist-renderer"
  ]
}